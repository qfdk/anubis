<%- include('../../includes/header'); %>
<div class="jumbotron">
    <h2>编辑过滤器【<%- filterName; %>】</h2>
</div>
<div class="panel panel-default">
    <div class="panel-heading">规则设置</div>
    <div class="panel-body">
        <h4 class="text-center">规则设置：</h4>
        <form action="<%- process.env.BASE_PATH; %>/admin/filters/doAdd" method="POST" class="form-horizontal">
            <div class="form-group">
                <label class="col-md-4 control-label">过滤器名称：</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" name="filterName" value="<%- filterName; %>" required readonly>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">过滤器内容：</label>
                <div class="col-md-12">
                    <textarea class="form-control" rows="12" name="filterContent"><%- filterContent; %></textarea>
                </div>
            </div>

            <div class="form-group" style="text-align:center">
                <input type="submit" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>
<%- include('../../includes/footer'); %>